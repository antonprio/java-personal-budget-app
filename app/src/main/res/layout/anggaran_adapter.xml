<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adapter_nama_anggaran"
        android:text="Nama Anggaran"
        android:textStyle="bold"
        android:textSize="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_nama_anggaran"
        android:id="@+id/adapter_jumlah_anggaran"
        android:text="100,000"
        android:textSize="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_jumlah_anggaran"
        android:id="@+id/adapter_tanggal_anggaran"
        android:text="2016-01-22"
        android:textSize="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/adapter_id_anggaran"
        android:text="# 1"
        android:textSize="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/adapter_id_anggaran"
        android:id="@+id/adapter_katagori_anggaran"
        android:text="Travelling"
        android:textSize="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_katagori_anggaran"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/adapter_status_anggaran"
        android:text="Status: Belum Terlaksana"
        android:textSize="16dp" />

</RelativeLayout>
