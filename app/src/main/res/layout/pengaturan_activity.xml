<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hapus Semua Transaksi"
        android:id="@+id/hapus_transaksi"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#030303"
        android:layout_below="@+id/hapus_transaksi"
        android:layout_marginTop="30dp"
        android:id="@+id/separator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/password"
        android:layout_below="@+id/separator"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/hapus_transaksi"
        android:layout_alignStart="@+id/hapus_transaksi"
        android:textStyle="bold" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_checkbox"
        android:layout_alignTop="@+id/separator"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="checkBox"
        android:layout_marginRight="15dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#030303"
        android:layout_below="@+id/password"
        android:layout_marginTop="30dp"
        android:id="@+id/separator2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" Password Baru"
        android:id="@+id/label_new_password"
        android:layout_below="@+id/separator2"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/input_password"
        android:layout_below="@+id/label_new_password"
        android:layout_alignLeft="@+id/label_new_password"
        android:layout_alignStart="@+id/label_new_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Konfirmasi"
        android:id="@+id/label_konfirm"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:layout_below="@+id/input_password"
        android:layout_alignLeft="@+id/input_password"
        android:layout_alignStart="@+id/input_password" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirm_password"
        android:layout_below="@+id/label_konfirm"
        android:layout_alignLeft="@+id/label_konfirm"
        android:layout_alignStart="@+id/label_konfirm" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIMPAN"
        android:id="@+id/simpan_password"
        android:layout_below="@+id/confirm_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

</RelativeLayout>
