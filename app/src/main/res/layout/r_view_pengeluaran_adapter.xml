<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/r_view_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Nama Pengeluaran"
        android:textStyle="bold"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/r_view_jumlah"
        android:layout_width="match_parent"
        android:text="Rp. 25,000"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r_view_nama"/>
    <TextView
        android:id="@+id/r_view_tanggal"
        android:layout_width="wrap_content"
        android:text="2012-09-08"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r_view_jumlah"/>
    <TextView
        android:id="@+id/r_view_katagori"
        android:layout_width="wrap_content"
        android:text="Bensin"
        android:layout_below="@+id/r_view_id"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/r_view_waktu"
        android:layout_width="wrap_content"
        android:text="07:11 am"
        android:layout_below="@+id/r_view_katagori"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/r_view_id"
        android:layout_width="wrap_content"
        android:text="#1"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
