<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/r_view_nama_pemasukan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/r_view_jumlah_pemasukan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r_view_nama_pemasukan"/>
    <TextView
        android:id="@+id/r_view_tanggal_pemasukan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r_view_jumlah_pemasukan"/>
    <TextView
        android:id="@+id/r_view_katagori_pemasukan"
        android:layout_width="wrap_content"
        android:layout_below="@+id/r_view_id_pemasukan"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/r_view_id_pemasukan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/r_view_waktu_pemasukan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/r_view_katagori_pemasukan" />

</RelativeLayout>